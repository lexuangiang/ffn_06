<div class="header">
  <div class="header-top">
    <div class="wrap">
      <div class="top-menu">
        <ul>
          <li><%= link_to (t"home"), root_path %></li>
          <li><%= t "layout.about" %></li>
          <li><%= t "layout.contact" %></li>
        </ul>
      </div>
      <div class="num">
        <p><%= t "layout.telephone" %></p>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="header-bottom">
    <div class="logo text-center">
      <%= link_to root_path do %>
        <%= image_tag "logo.jpg" %>
      <% end %>
    </div>
    <div class="navigation">
      <nav class="navbar navbar-default" role="navigation">
        <div class="wrap">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
              data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li><%= link_to t("home"), root_path %></li>
              <li><%= link_to t("matches"), matches_path %></li>
              <li><%= link_to t("players"), players_path %></li>
              <li><%= link_to t("clubs"), clubs_path %></li>
              <li><%= link_to t("help"), "#" %></li>
              <% if logged_in? %>
                <% if current_user.isadmin? %>
                  <li><%= link_to t("admin.admin"), admin_path %></li>
                <% end %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <%= t "account" %> <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to t("profile"), user_path(current_user) %></li>
                    <li><%= link_to t("setting"), edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to t("logout"), delete_session_path, method: :delete %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to t("login"), new_session_path %></li>
              <% end %>
            </ul>
          </div>
      </div>
    </div>
    </nav>
  </div>
</div>
